{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    // "moduleResolution": "Bundler",
    "moduleResolution": "Node",
    "types": ["node", "vue"],
    //ajout gpt
    "target": "ESNext",
    "strict": true, // Active les vérifications strictes
    "esModuleInterop": true, // Pour interopérabilité avec les modules ES6
    "skipLibCheck": true, // Évite les vérifications de fichiers .d.ts
    "forceConsistentCasingInFileNames": true 
  }
}
